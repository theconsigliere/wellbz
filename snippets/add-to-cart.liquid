<form action="/cart/add" enctype="multipart/form-data" id="AddToCartForm" method="post">


    {% for variant in product.variants %}
        <!-- as we are in a forloop, we can look for forloop property and get .index property out of it ie variant-1, variant-2 etc -->
        <!-- assigned to variant.id so form knows what we are selecting -->
        <input
        type="radio" name='id' id='variant-{{ forloop.index }}' value='{{ variant.id }}'> <!-- assigned to forloop makes label clickable -->
        <label for="variant-{{ for.loop.index }}">{{ variant.title }}</label>
    {% endfor %}


    {{ current_variant.price | money }}


    <label for="Quantity">quantity</label>
    <input id="Quantity" min="1" name="quantity" type="number" value="1">


    <button id="AddToCart" name="add" type="submit">Add to cart</button>
</form>